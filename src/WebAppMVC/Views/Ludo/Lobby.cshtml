@model WebAppMVC.Models.PlayerModelContainer
@{
    ViewData["Title"] = "Lobby";
    Layout = "_HomeLayout";
}

<head>
    <title>Lobby</title>
</head>
<body>
    <h1>Lobby</h1>
    @if (ViewBag.errorMessage != null)
    {
        <p>@ViewBag.errorMessage</p>
    }

    @if (ViewBag.message != null)
    {
        <p>@ViewBag.message</p>
    }
    else
    {
        <h4>Game ID: @Model.gameId</h4>
        <h5>Players</h5>
        foreach(PlayerModel player in Model.Players)
        {
            <p>@player.Name</p>
        }
        <form asp-action="StartGame" asp-controller="Ludo">
            <button type="submit">Start Game</button>
        </form>
    }
</body>