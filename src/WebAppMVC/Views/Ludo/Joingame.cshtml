@model WebAppMVC.Models.CreateGameModel
@{
    ViewData["Title"] = "Joingame";
    Layout = "_HomeLayout";
}

<head>
    <title>Join game</title>
</head>
<body>
    <div class="text-center">
        <form asp-action="SelectGame" asp-controller="Ludo">
            <div>
                <label asp-for="GameId"></label>
                <input asp-for="GameId" type="text"/>
            </div>
            <div>
                <label asp-for="PlayerName"></label>
                <input asp-for="PlayerName" type="text"/>
            </div>
            <div>
                <label asp-for="PlayerColor"></label>
                <select asp-for="PlayerColor">
                    <option value="0">Red</option>
                    <option value="1">Green</option>
                    <option value="2">Blue</option>
                    <option value="3">Yellow</option>
                </select>
            </div>
            <input type="submit" value="Join Game"/>
        </form>    
        
        
